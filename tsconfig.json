{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "strict": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": [
      "./src/@types",
      "node_modules/@types"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}